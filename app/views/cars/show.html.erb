<h1>Show de <%= @car.name %></h1>
<h3>Marque: <%= @car.brand %></h3>
<h3>Model: <%= @car.model %></h3>
<h3>kilomètres: <%= @car.kilometers %> <%= 'kilomètre'.pluralize(@car.kilometers) %></h3>
<h3>Coût entretien total: <%= Invoice.where(car: @car).sum(:price)%> €</h3>
<h3>Coût  total: <%= (Invoice.where(car: @car).sum(:price)+@car.purchased_price).round%> €</h3>
<h3>Prix au km: <%= ((Invoice.where(car: @car).sum(:price)+@car.purchased_price)/@car.kilometers).round(2) %> € / km</h3>
<h3><%= ownership_time %></h3>

<%= link_to edit_car_path(@car) do %>
  <button>Modifier</button>
<% end %>

<%= link_to car_path(@car), method: :delete do %>
  <button>Supprimer</button>
<% end %>

<%= link_to garage_car_invoices_path(@car.garage, @car) do %>
  <button>Voir les factures</button>
<% end %>

<%= link_to garage_path(@garage) do %>
  <button>Retour aux garages</button>
<% end %>
