<div class="garage-container">
  <h1>Trips de <%= @car.name %></h1>
  
  <ol>
    <% @trips.each do |trip| %>
      <%= link_to garage_car_trip_path(@car.garage, @car, trip) do %>
        <li><i class='fa-solid <%= icons_trip(trip) %>'></i> <button class='button'><%= trip.name %> <%= trip.date %></button></li>
      <% end %>
    <% end %>
  </ol>

  <%= link_to new_trip_path(@car) do %>
    <button class='button'>Créer un nouveau trajet</button>
  <% end %>

  <%= link_to garage_car_path(@car.garage, @car) do %>
    <button class='button'>Retour à la voiture</button>
  <% end %>
</div>
