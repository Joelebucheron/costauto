<h1>new invoice</h1>

<%= simple_form_for(@invoice) do |f| %>
  <% if @car.nil? %>
    <%= f.association :car %>
  <% else %>
    <%= f.input :car_id, as: :hidden, input_html: { value: params[:format] } %>
  <% end %>
  <%= f.input :name %>
  <%= f.input :piece, placeholder: 'Pneus, freins, vidange'  %>
  <%= f.input :supplier, placeholder: 'Euromaster, Speedy etc.' %>
  <%= f.input :price, as: :float  %>
  <%= f.input :date, as: :date %>
  <%= f.input :kilometers, as: :integer %>
  <%= f.submit %>

<% end %>
