<h1>Show invoice</h1>

<ul>
  <li><%= @invoice.name %></li>
  <li><%= @invoice.date %></li>
  <li><%= @invoice.supplier %></li>
  <li><%= @invoice.piece %></li>
  <li><%= number_to_currency(@invoice.price, locale: :fr) %></li>
  <li><%= @invoice.kilometers %> kms</li>
  <li><%= @invoice.trip %></li>
</ul>


<%= link_to edit_invoice_path(@invoice.car.garage, @invoice.car, @invoice) do %>
  <button>Modifier</button>
<% end %>

<%= link_to invoice_path(@invoice), method: :delete do %>
  <button>Supprimer</button>
<% end %>

<%= link_to garage_car_invoices_path(@invoice.car.garage, @invoice.car) do %>
  <button>Retour aux factures</button>
<% end %>
